{#
 * @file
 * Template for the main menu.
#}
<nav class="main-menu">
  <ul class="d-flex">
    {% for item in items %}
      <li{{ item.attributes.addClass(item.is_expanded ? 'expanded', item.is_collapsed ? 'collapsed', item.in_active_trail ? 'active-trail') }}>
        {{ link(item.title, item.url) }}
        {% if item.below %}
          {{ include('@tu_tema/menu--main--sub.html.twig', { 'items': item.below }) }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</nav>