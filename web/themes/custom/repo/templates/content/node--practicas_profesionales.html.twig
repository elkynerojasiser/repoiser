{# node--practicas.html.twig #}

<div class="container custom-formacion">
	<article {{attributes.addClass('node','node--type-practicas','clearfix')}}>
		<div class="row d-flex justify-content-center">
			<div class="col d-flex justify-content-center">
				<h3 class="text-center">{{ label }}</h3>
			</div>
		</div>
		<div class="card p-3 mb-3">
			<div class="row">
				<div class="col">
					<h3>Documento de Práctica Profesional</h3>
				</div>
			</div>
			{{ content.field_informe_final_practica }}
		</div>
    <div class="card p-3 mb-3">
			<div class="row">
				<div class="col">
					<h3>Anexos</h3>
				</div>
			</div>
			{{ content.field_anexos_practica }}
		</div>
		<div class="card p-3 mb-3">
			<div class="card-body">
        <h5>Estudiante: {{ content.field_estudiante }}</h5>
        <h5>Periodo Académico: {{ content.field_periodo }}</h5>
        <h5>Empresa - Entidad: {{ content.field_empresa_entidad }}</h5>
      </div>
		</div>

	</article>
</div>
