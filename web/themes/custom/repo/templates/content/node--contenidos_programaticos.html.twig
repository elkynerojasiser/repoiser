{# node--practicas.html.twig #}

<div class="container custom-formacion">
	<article {{attributes.addClass('node','node--type-practicas','clearfix')}}>
		<div class="row d-flex justify-content-center">
			<div class="col d-flex justify-content-center">
				<h3 class="text-center">{{ label }}</h3>
			</div>
		</div>
		<div class="card p-3 mb-3">
			<div class="row">
				<div class="col">
					<h3>Documento Contenidos Programáticos</h3>
				</div>
			</div>
			{{ content.field_documento_contenido }}
		</div>
		<div class="card p-3 mb-3">
			<div class="card-body">
        <h5>Periodo Académico: {{ content.field_periodo }}</h5>
        <h5>Asignatura: {{ content.field_asignatura }}</h5>
        <h5>Semestre: {{ content.field_semestre }}</h5>
      </div>
		</div>

	</article>
</div>
