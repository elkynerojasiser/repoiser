{# node--contenido.html.twig #}

<div class="container custom-contenido">
    <article {{attributes.addClass('node','node--type-contenido','clearfix')}}>
    
      <div class="content-wrapper">
        <div class="document-details">
          <div class="row">
            <div class="col-left">
              <div class="document-img">
