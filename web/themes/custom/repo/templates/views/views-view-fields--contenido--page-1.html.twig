<div class="view-right-column">
    <div class="contenedor">
        <div class="trabajo">
            <div class="imagen">
                {{ fields.field_portada_contenido.content }}
            </div>
            <div class="detalles">
                <h1>{{ fields.title.content }}</h1>
                <span class="codigo">{{ fields.field_codigo.content }}</span>
                <span class="semestre"> {{fields.field_semestre.content}}</span>
                <span class="programa">{{ fields.field_programas.content }} </span>
                <div class="resumen-container">
                  <span class="resumen">{{ fields.field_resumen.content }}</span>
                </div>
                <div class="operaciones-container">
                  <span class="operations">{{ fields.operations.content }}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="operaciones-container">
      <span class="add-content">{{ fields.nothing.content }}</span>
    </div>
</div>
