<div class="view-left-column">
    {# Imprime los filtros expuestos dentro de un formulario #}
    {% if exposed %}
      <div class="view-filters">
        <form action="{{ view.exposed.form.action }}" method="get" id="{{ view.exposed.form_id }}">
          {{ exposed }}
        </form>
      </div>
    {% endif %}
</div>

